---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Plan de Entrenamiento" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-zinc-950 text-gray-50">
		<header class="bg-gradient-to-r from-orange-600 to-orange-500 p-4">
			<h1 class="text-3xl font-extrabold">{title}</h1>
		</header>
		<main class="p-6">
			<slot />
		</main>
		<footer class="bg-zinc-950 p-4 text-center">
			<p>© 2024 Leiner Hoyos. Todos los derechos reservados.</p>
		</footer>
	</body>
</html>

<style is:global>
	/* Aquí puedes agregar estilos globales si es necesario */
</style>
